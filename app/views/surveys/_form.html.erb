<%= form_for [@customer, @survey] do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :complete_message %><br />
    <%= f.text_area :complete_message %>
  </div>
  <div class="field">
    <%= f.label :tracking_type_id, "How often can a single user complete this survey?" %><br />
    <%= f.collection_select :tracking_type_id, TrackingType.all, :id, :description, {include_blank: 'No limits'} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
