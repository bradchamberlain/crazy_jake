            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :customer_id %><br />
      <%= f.select :customer_id, Customer.all.map{ |c| [c.name, c.id] }, {include_blank: 'None'} %>
    </div>
    <div class="field">
      <%= f.label :admin %><br />
      <%= f.check_box :admin %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
