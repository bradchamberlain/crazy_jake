<h1>All customers</h1>

<table class="table">
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer_path(customer) %></td>
        <td><%= link_to 'Surveys', customer_surveys_path(customer) %></td>
        <td><%= link_to "Active: #{customer.active?}", customer_path(customer) %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
