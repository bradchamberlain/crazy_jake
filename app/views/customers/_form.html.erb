<%= form_for(@customer, html: {multipart: true}) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <% if @customer.logo.file? %>
        <div style="position: absolute; left:200px;"><%= image_tag(@customer.logo.url(:icon)) %></div>
    <% end %>
    <%= f.label :logo %><br />
    <%= f.file_field :logo %>
  </div>
  <div class="field">
    <%= f.label :menu_text_color %><br />
    <%= f.text_field :menu_text_color %>
  </div>
    <div class="field">
      <%= f.label :menu_bg_color, "Menu Background Color" %><br />
      <%= f.text_field :menu_bg_color %>
    </div>
    <div class="field">
      <%= f.label :body_text_color %><br />
      <%= f.text_field :body_text_color %>
    </div>
    <div class="field">
      <%= f.label :body_bg_color, "Body Background Color" %><br />
      <%= f.text_field :body_bg_color %>
    </div>
    <div>
      <%= link_to "Color Helper", root_path + "colors.html", target: "_blank" %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
